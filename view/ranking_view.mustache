<main class="py-5">
    <div class="content container px-lg-5 p-4 bg-light rounded-3 ">
        <h1 class="text-center text-warning display-2 fw-bold">Ranking</h1>
        <br>
        <div>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Score</th>
                    <th>Posicion</th>
                </tr>
                </thead>
                <tbody>
                {{#users}}
                    <tr>
                        <td><a href="user&username={{username}}">{{fullname}}</a></td>
                        <td>{{score}}</td>
                        <td>#{{Posicion}}</td>
                    </tr>
                {{/users}}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center">
            <br>
            <a href="/lobby" class="btn btn-lg btn-primary m-3">Volver al inicio</a>
        </div>
    </div>
</main>